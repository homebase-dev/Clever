.page-header
  %h1
    Registrieren
    / <small>Subtext for header</small>
.row
  .col-lg-2
    %a.thumbnail.category{:href => "#"}
      = image_tag("passport.png", alt: "Registration icon")
      %p.text-center
    %a.btn.btn-default.pull-right{:href => "#{static_pages_home_path}", :role => "button"} Zurück
  .col-lg-10
  
    .panel.panel-primary
      .panel-heading
        %h3.panel-title Schritt 1/2: Registration
      .panel-body
        %p Gib in diesem Schritt die benötigten Daten ein. Im nächsten Schritt wirst du aufgefordert deine Kreditkarten Daten anzugeben um deinen Account für ein Jahr freizuschalten.
      
        = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
          = devise_error_messages!
          .form-group
            = f.label :email, :class => 'control-label'
            = f.email_field :email, autofocus: true, :class => 'form-control'
          .form-group
            = f.label :password, :class => 'control-label'
            - if @validatable
              %p.help-block
                (#{@minimum_password_length} characters minimum)
            = f.password_field :password, autocomplete: "off", :class => 'form-control'
          .form-group
            = f.label :password_confirmation, :class => 'control-label'
            = f.password_field :password_confirmation, autocomplete: "off", :class => 'form-control'
          .form-group
            = f.label :firstname, :class => 'control-label'
            = f.text_field :firstname, :class => 'form-control'
          .form-group
            = f.label :lastname, :class => 'control-label'
            = f.text_field :lastname, :class => 'form-control'
          .form-group
            = f.label :birthdate, :class => 'control-label'
            = f.date_field :birthdate, :class => 'form-control'
          .form-group
            = f.label :phone, :class => 'control-label'
            = f.text_field :phone, :class => 'form-control'
          .form-group
            = f.label :street, :class => 'control-label'
            = f.text_field :street, :class => 'form-control'
          .form-group
            = f.label :zip, :class => 'control-label'
            = f.text_field :zip, :class => 'form-control'
          .form-group
            = f.label :city, :class => 'control-label'
            = f.text_field :city, :class => 'form-control'
          .form-group
            = f.label :country, :class => 'control-label'
            = f.text_field :country, :class => 'form-control'
          .checkbox
            %label
              = check_box_tag :accept_tos 
              Ich akzeptiere die AGB
          = f.submit "Registrieren", :class => 'btn btn-success pull-right'
        / = render "devise/shared/links"