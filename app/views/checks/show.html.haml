- model_class = Check
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:assignation_id)
      \:
  %dd= @check.assignation_id
  %dt
    %strong
      = model_class.human_attribute_name(:answer_id)
      \:
  %dd= @check.answer_id
= link_to t('.back', :default => t("helpers.links.back")), |
  checks_path, :class => 'btn btn-default'                 |
-#
= link_to t('.edit', :default => t("helpers.links.edit")), |
  edit_check_path(@check), :class => 'btn btn-default'     |
-#
= link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
  check_path(@check),                                                                                          |
  :method => 'delete',                                                                                         |
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
  :class => 'btn btn-danger'                                                                                   |
