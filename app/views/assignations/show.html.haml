- model_class = Assignation
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:test_id)
      \:
  %dd= @assignation.test_id
  %dt
    %strong
      = model_class.human_attribute_name(:question_id)
      \:
  %dd= @assignation.question_id
= link_to t('.back', :default => t("helpers.links.back")), |
  assignations_path, :class => 'btn btn-default'           |
-#
= link_to t('.edit', :default => t("helpers.links.edit")),         |
  edit_assignation_path(@assignation), :class => 'btn btn-default' |
-#
= link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
  assignation_path(@assignation),                                                                              |
  :method => 'delete',                                                                                         |
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
  :class => 'btn btn-danger'                                                                                   |
