- model_class = Assignation
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:test_id)
      %th= model_class.human_attribute_name(:question_id)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @assignations.each do |assignation|
      %tr
        %td= link_to assignation.id, assignation_path(assignation)
        %td= assignation.test_id
        %td= assignation.question_id
        %td= l assignation.created_at
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")),               |
            edit_assignation_path(assignation), :class => 'btn btn-default btn-xs' |
          -#
          = link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
            assignation_path(assignation),                                                                               |
            :method => :delete,                                                                                          |
            :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
            :class => 'btn btn-xs btn-danger'                                                                            |
= link_to t('.new', :default => t("helpers.links.new")), |
  new_assignation_path,                                  |
  :class => 'btn btn-primary'                            |
