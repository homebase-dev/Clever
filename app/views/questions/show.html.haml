- model_class = Question
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:text)
      \:
  %dd= @question.text
  %dt
    %strong
      = model_class.human_attribute_name(:category_id)
      \:
  %dd= @question.category_id
  %dt
    %strong
      = model_class.human_attribute_name(:creator_id)
      \:
  %dd= @question.creator_id
  %dt
    %strong
      = model_class.human_attribute_name(:published)
      \:
  %dd= @question.published
= link_to t('.back', :default => t("helpers.links.back")), quiz_category_questions_path(@question.category.quiz, @question.category), :class => 'btn btn-default'
-#
= link_to t('.edit', :default => t("helpers.links.edit")), edit_quiz_category_question_path(@question.category.quiz, @question.category, @question), :class => 'btn btn-default' 
-#
= link_to t('.destroy', :default => t("helpers.links.destroy")), question_path(@question), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'                                                                                   |
