- model_class = Question
.page-header
  %h1= t '.title', :default => model_class.model_name.human.pluralize.titleize
%a.btn.btn-default.pull-right{:href => "#{quiz_categories_path(@category.quiz)}", :role => "button"} ZurÃ¼ck
%table.table.table-striped
  %thead
    %tr
      %th= model_class.human_attribute_name(:id)
      %th= model_class.human_attribute_name(:text)
      %th #Answers
      %th= model_class.human_attribute_name(:category_id)
      %th= model_class.human_attribute_name(:creator_id)
      %th= model_class.human_attribute_name(:published)
      %th= model_class.human_attribute_name(:created_at)
      %th= t '.actions', :default => t("helpers.actions")
  %tbody
    - @category_questions.each do |question|
      %tr
        %td= link_to question.id, question_path(question)
        %td= preview_html_field(question.text, 50)
        %td= question.answers.count
        %td= question.category_id
        %td= question.creator_id
        %td= question.published
        %td= question.created_at_formatted
        %td
          = link_to t('.show', :default => t("helpers.links.show")), question_path(question), :class => 'btn btn-default btn-xs'
          = link_to t('.edit', :default => t("helpers.links.edit")), edit_question_path(question), :class => 'btn btn-default btn-xs'
          = link_to 'Answers',  quiz_category_question_answers_path(@category.quiz, @category, question), :class => 'btn btn-primary btn-xs' 
          -#
          = link_to t('.destroy', :default => t("helpers.links.destroy")), question_path(question), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs btn-danger'

= link_to t('.new', :default => t("helpers.links.new")), new_quiz_category_question_path(@category.quiz, @category), :class => 'btn btn-success'
