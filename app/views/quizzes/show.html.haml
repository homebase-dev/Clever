- model_class = Quiz
.page-header
  %h1 Quiz
%dl.dl-horizontal
  %dt
    %strong
      Name :
  %dd= @quiz.name
  %dt
    %strong
      Beschreibung :
  %dd= preview_html_field(@quiz.description)
  %dt
    %strong
      Erstellt von :
  %dd= @quiz.creator_id
  %dt
    %strong
      Veröffentlicht? :
  %dd= render_boolean(@quiz.published)
  %dt
    %strong
      Bild :
  %dd= image_tag @quiz.image.thumb.url
= link_to "Editieren", edit_quiz_path(@quiz), :class => 'btn btn-default'
= link_to "Neu", new_quiz_path, :class => 'btn btn-success'
= link_to "Löschen", quiz_path(@quiz), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'                                                                                   |
/= link_to "Pdf", quiz_path(@quiz, :format => "pdf"), :class => 'btn btn-default'
%br/
\#{link_to 'Zurück', quizzes_path}  
