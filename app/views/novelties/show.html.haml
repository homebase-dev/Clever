- model_class = Novelty
.page-header
  %h1= t '.title', :default => model_class.model_name.human.titleize
%dl.dl-horizontal
  %dt
    %strong
      = model_class.human_attribute_name(:title)
      \:
  %dd= @novelty.title
  %dt
    %strong
      = model_class.human_attribute_name(:text)
      \:
  %dd= @novelty.text
  %dt
    %strong
      = model_class.human_attribute_name(:published)
      \:
  %dd= @novelty.published
  %dt
    %strong
      = model_class.human_attribute_name(:priority)
      \:
  %dd= @novelty.priority
= link_to t('.back', :default => t("helpers.links.back")), |
  novelties_path, :class => 'btn btn-default'              |
-#
= link_to t('.edit', :default => t("helpers.links.edit")), |
  edit_novelty_path(@novelty), :class => 'btn btn-default' |
-#
= link_to t('.destroy', :default => t("helpers.links.destroy")),                                               |
  novelty_path(@novelty),                                                                                      |
  :method => 'delete',                                                                                         |
  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, |
  :class => 'btn btn-danger'                                                                                   |
