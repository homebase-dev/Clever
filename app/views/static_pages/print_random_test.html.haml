.page-header
  %h1 Test

.row{:"data-no-turbolink" => true}
  .col-lg-12
    %h2 Zahlenfolgen (10 Fragen, 15 Minuten Zeit)
    - @zahlenfolgen_questions.each_with_index do |question, index_1|
      = render "shared/question", question: question, question_number: index_1+1, show_solution: @show_solutions
    %pagebreak
      
.row{:"data-no-turbolink" => true}
  .col-lg-12
    %h2 Gedächtnis und Merkfähigkeit (Lernphase: 8 Minuten Zeit)
    .panel.panel-default.flat-corners
      .panel-heading
        Kontext
      .panel-body.scale-images
        =preview_html_field(@gedaechtnis_context.content)
        .spacer{:style => "margin-top: 60px;"}
    %pagebreak   
      
.row{:"data-no-turbolink" => true}
  .col-lg-12
    %h2 Gedächtnis und Merkfähigkeit (Reproduktionsphase: 25 Fragen, 15 Minuten Zeit)
    - @gedaechtnis_questions.each_with_index do |question, index_1|
      = render "shared/question", question: question, question_number: index_1+1, show_solution: @show_solutions
    %pagebreak
      
