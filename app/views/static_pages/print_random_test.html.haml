    %pagebreak
      
.row{:"data-no-turbolink" => true}
  .col-lg-12
    %h2 Soziales Entscheiden (#{@soziales_questions.count} Fragen)
    - @soziales_questions.each_with_index do |question, index_1|
      = render "shared/question", question: question, question_number: index_1+1, show_solution: @show_solutions
    %pagebreak 
      
      
.row{:"data-no-turbolink" => true}
  .col-lg-12
    %h2 Biologie (40 Fragen)
    - @biologie_questions.each_with_index do |question, index_1|
      = render "shared/question", question: question, question_number: index_1+1, show_solution: @show_solutions
    %pagebreak
      
