.page-header
  %h1
    Impressum
    / <small>Subtext for header</small>
.row
  .col-lg-2
    %a.thumbnail.category{:href => "#"}
      = image_tag("placeholder_icon.png", alt: "Impressum icon")
      %p.text-center
  .col-lg-10
    %h2 Kontaktdaten
    %br/
    %address
      %strong=t 'clever.address.owner'
      %br/
      =t 'clever.address.street'
      %br/
      #{t 'clever.address.zip'} #{t 'clever.address.city'}
      %br/
      =t 'clever.address.country'
      %br/
    %address
      %abbr{:title => "Phone"} Tel.
      =t 'clever.address.phone'
      %br/
      %abbr{:title => "Phone"} E-mail
      %a{:href => "mailto:#"}=t 'clever.address.email'
      %br/
