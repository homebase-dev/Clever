.page-header
  %h1
    Category
    / <small>Subtext for header</small>

.row
  .col-lg-12

    %p
      %strong Name:
      = @category.name
    %p
      %strong Description:
      = preview_html_field(@category.description)
    %p
      %strong Creator:
      = @category.creator
    %p
      %strong Quiz:
      = @category.quiz
    %p
      %strong Published:
      = @category.published
    %p
      %strong Image:
      = image_tag @category.image.thumb.url
      
      
= link_to t('.back', :default => t("helpers.links.back")), quiz_categories_path(@category.quiz), :class => 'btn btn-default'
-#
= link_to t('.edit', :default => t("helpers.links.edit")), edit_category_path(@category), :class => 'btn btn-default'
-#
= link_to t('.new', :default => t("helpers.links.new")), new_quiz_category_path(@category.quiz), :class => 'btn btn-success'
-#
= link_to t('.destroy', :default => t("helpers.links.destroy")), category_path(@category), :method => 'delete', :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'                                                                                   |




