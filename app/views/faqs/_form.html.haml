= form_for @faq, :html => { :class => "form-horizontal faq" } do |f|
  - if @faq.errors.any?
    #error_expl.panel.panel-danger
      .panel-heading
        %h3.panel-title
          = pluralize(@faq.errors.count, "error")
          prohibited this faq from being saved:
      .panel-body
        %ul
          - @faq.errors.full_messages.each do |msg|
            %li= msg
  .control-group
    = f.label :title, :class => 'control-label'
    .controls
      = f.text_field :title, :class => 'form-control'
    = error_span(@faq[:title])
  .control-group
    = f.label :text, :class => 'control-label'
    .controls
      = f.text_area :text, :class => 'form-control', :rows => "10"
    = error_span(@faq[:text])
  .control-group
    = f.label :priority, :class => 'control-label'
    .controls
      = f.text_field :priority, :class => 'form-control'
    = error_span(@faq[:priority])
  .control-group
    = f.label :published, :class => 'control-label'
    .controls
      = f.check_box :published
    = error_span(@faq[:published])
  = f.submit nil, :class => 'btn btn-primary'
  = link_to t('.cancel', :default => t("helpers.links.cancel")), |
    faqs_path, :class => 'btn btn-default'                       |
