%table.table.table-striped
  %thead
    %tr
      %th E-mail
      %th Name
      %th Geburtsdatum
      %th Stadt
      %th Land
      %th Rolle
  %tbody
    - @users.each do |user|
      %tr
        %td= user.email
        %td= user.fullname
        %td= user.birthdate
        %td= user.city
        %td= user.country
        %td= user.role_name
        %td
          = link_to t('.edit', :default => t("helpers.links.edit")), users_edit_admin_path(:id => user.id), :class => 'btn btn-default btn-xs'
          / = link_to t('.destroy', :default => t("helpers.links.destroy")), "", 
          /  :method => :delete, 
          /  :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, 
          /  :class => 'btn btn-xs btn-danger'            
                                                                            
.row
  .col-lg-10
    = paginate @users