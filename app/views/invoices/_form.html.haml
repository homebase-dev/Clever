= form_for @invoice, html: { role: "form", class: "form form-horizontal invoice" } do |f|
  .form-group
    = f.label :user_id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :user_id, class: 'form-control', required: true
    = f.error_span(:user_id)
  .form-group
    = f.label :amount, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :amount, class: 'form-control', required: true
    = f.error_span(:amount)
  .form-group
    = f.label :message, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :message, class: 'form-control', required: true
    = f.error_span(:message)
  .form-group
    = f.label :transaction_id, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :transaction_id, class: 'form-control', required: true
    = f.error_span(:transaction_id)
  .form-group
    = f.label :transaction_code, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :transaction_code, class: 'form-control', required: true
    = f.error_span(:transaction_code)
  .form-group
    = f.label :transaction_text, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :transaction_text, class: 'form-control', required: true
    = f.error_span(:transaction_text)
  .form-group
    = f.label :success, class: 'control-label col-lg-2'
    .col-lg-10
      = f.text_field :success, class: 'form-control', required: true
    = f.error_span(:success)
  .form-group
    .col-lg-offset-2.col-lg-10
      = f.submit nil,class: 'btn btn-primary'
      = link_to t('.cancel', :default => t("helpers.links.cancel")), invoices_path, :class => 'btn btn-default'
