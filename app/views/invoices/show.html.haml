- model_class = Invoice
.page-header
  %h1=t '.title', :default => model_class.model_name.human.titleize

%p
  %strong= model_class.human_attribute_name(:user_id) + ':'
  %br
  = @invoice.user_id
%p
  %strong= model_class.human_attribute_name(:amount) + ':'
  %br
  = @invoice.amount
%p
  %strong= model_class.human_attribute_name(:message) + ':'
  %br
  = @invoice.message
%p
  %strong= model_class.human_attribute_name(:transaction_id) + ':'
  %br
  = @invoice.transaction_id
%p
  %strong= model_class.human_attribute_name(:transaction_code) + ':'
  %br
  = @invoice.transaction_code
%p
  %strong= model_class.human_attribute_name(:transaction_text) + ':'
  %br
  = @invoice.transaction_text
%p
  %strong= model_class.human_attribute_name(:success) + ':'
  %br
  = @invoice.success


= link_to t('.back', :default => t("helpers.links.back")), invoices_path, :class => 'btn btn-default'
= link_to t('.edit', :default => t("helpers.links.edit")), edit_invoice_path(@invoice), :class => 'btn btn-default'
= link_to t('.destroy', :default => t("helpers.links.destroy")), invoice_path(@invoice), :method => "delete", :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-danger'
